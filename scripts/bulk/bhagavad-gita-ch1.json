        { "word": "समवेता", "meaning": "assembled" },
        { "word": "युयुत्सवः", "meaning": "eager to fight" },
        { "word": "मामकाः", "meaning": "my sons" },
        { "word": "पाण्डवाः", "meaning": "the Pandavas" }
      ],
